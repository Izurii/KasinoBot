{
	"compilerOptions": {
		"target": "ES2017",
		"module": "commonjs",
		"moduleResolution": "node",
		"rootDir": "./src",
		"outDir": "./build",
		"strict": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"esModuleInterop": true,
		"types": [
			"node"
		],
		"typeRoots": [
			"node_modules/@types"
		],
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"skipLibCheck": true
	}
}